{{#partial "content" }}

    {{#each personName }}
    <h1 style="font-size: larger;">Welcome {{ name }}!</h1>
    {{/each }}
    <h1 style="font-size: larger;">Projects</h1>

<ul>
    {{#each projectList }}
        <li>{{ name }}: {{ description }}</li>
    {{/each }}
</ul>

<form action="/projects" method="post">
    <input type="text" placeholder="project name" name="projectname"/>
    <input type="text" placeholder="project description" name="projectdesc"/>
    <button>Submit</button>
</form>
<br>
    <a href="/">Sign Out</a>
{{/partial }}

{{> base.hbs}}